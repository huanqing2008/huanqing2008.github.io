				<cube url="panos/room02.tiles/%s/l2/%v/l2_%s_%v_%h.jpg" />
			</level>
			<level tiledimagewidth="1024" tiledimageheight="1024">
				<cube url="panos/room02.tiles/%s/l1/%v/l1_%s_%v_%h.jpg" />
			</level>
		</image>

		<!-- place your scene hotspots here -->
		<hotspot name="spot1" style="skin_hotspotstyle" ath="98.667" atv="25.870" linkedscene="scene_room01" />
		<hotspot name="spot22" style="skin_hotspotstyle" ath="98.667" atv="85.870"   />

		<hotspot name="spot22" onhover="showtext([b]Doris Walther [br][/br]-Grabauer Kapelle-[br][/br]Acryl[/b],STYLE3);" fillcolor="0xaaaaaa" fillalpha="0" borderwidth="3.0" bordercolor="0xaaaaaa" borderalpha="0" 
	         >
		<point ath="-69.75303" atv="-14.200761" />
		<point ath="-56.446961" atv="-14.596233" />
		<point ath="-56.282613" atv="3.555969" />
